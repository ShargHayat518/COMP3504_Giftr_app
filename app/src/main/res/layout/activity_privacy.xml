<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="#CDEBEE">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:textSize="35sp"
        android:textColor="#3281a8"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:elevation="10dp"
        android:background="@drawable/pinkbox">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Data Use"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="#3281a8">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bluebox"
            android:layout_marginHorizontal="20dp"
            android:elevation="5dp"
            >


            <TextView
                android:id="@+id/viewEmail"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width= "match_parent"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:text="For the purposes of this application, we have collected your name, email address, password, and friend's data. Rest assured, your personal data will not be used for purposes outside the application or sold to third party organizations. User data is stored strictly for the improvement of user experience."
                android:textAllCaps="false"
                android:textColor="#3281a8" />
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Security"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="#3281a8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bluebox"
            android:layout_marginHorizontal="20dp"
            android:elevation="5dp"

            >


            <TextView
                android:id="@+id/privacy"
                android:layout_width= "match_parent"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:text="While we have taken precautions to secure your data to the best of our ability, be cognizant that no electronic storage method is 100% secure. Therefore, we cannot guarantee data security. "
                android:textAllCaps="false"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:textColor="#3281a8" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>