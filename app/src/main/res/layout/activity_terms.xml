<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="#CDEBEE">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms of Service"
        android:textSize="35sp"
        android:textColor="#3281a8"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:elevation="10dp"
        android:background="@drawable/pinkbox">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Responsibility"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="#3281a8">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bluebox"
            android:layout_marginHorizontal="20dp"
            android:elevation="5dp"
            >


            <TextView
                android:id="@+id/viewEmail"
                android:layout_width= "match_parent"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="You, the user, are responsible for the confidentiality of your own account information including password data and friend data linked to your account. Liability for activities performed after an account has been hacked lie solely with the user. "
                android:textAllCaps="false"
                android:textColor="#3281a8" />
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ownership"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textColor="#3281a8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bluebox"
            android:layout_marginHorizontal="20dp"

            android:elevation="5dp"
            >


            <TextView
                android:id="@+id/privacy"
                android:layout_width= "match_parent"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:text="We do not claim legal ownership of any personal data stored within this application or its linked databases. However, by posing personal information within this applicaton, you agree to its use for user experience improvements. "
                android:textAllCaps="false"
                android:textColor="#3281a8" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>